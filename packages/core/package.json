{
  "name": "@viwo/core",
  "version": "0.2.8",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly",
    "db:generate": "drizzle-kit generate --dialect sqlite --schema ./src/db-schemas/index.ts",
    "db:migrate": "bun scripts/generate-migrations.ts",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test bun test"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "dockerode": "^4.0.2",
    "drizzle-orm": "^0.44.7",
    "env-paths": "^3.0.0",
    "get-port": "^7.0.0",
    "nanoid": "^5.1.6",
    "simple-git": "^3.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.7.2"
  }
}
